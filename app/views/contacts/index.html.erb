<div class="container">
  <h1 class="page-header" style="margin-top: 80px;">Listing Contacts</h1>

  <p id="notice"><%= notice %></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Kind</th>
        <th>Rmk</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind %></td>
          <td><%= contact.rmk %></td>
          <td><%= link_to content_tag(:span, nil, :class => "glyphicon glyphicon-eye-open"), contact %></td>
          <td><%= link_to content_tag(:span, nil, :class => "glyphicon glyphicon-edit"), edit_contact_path(contact) %></td>
          <td><%= link_to content_tag(:span, nil, :class => "glyphicon glyphicon-trash"), contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Contact', new_contact_path, :class => "btn btn-primary" %>

</div>