<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Addresses', addresses_path, :class => "navbar-brand" %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Kinds', kinds_path %></li>
        <li><%= link_to 'Contacts', contacts_path %></li>
        <li><%= link_to 'Phones', phones_path %></li>
        <li class="active"><%= link_to 'Addresses', addresses_path %></li>
      </ul>
    </div><!--/.navbar-collapse -->
  </div>
</nav>

<div class="container">
  <h1 class="page-header" style="margin-top: 80px;">Listing Addresses</h1>
  <p id="notice" class="alert alert-success"><%= notice %></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Contact</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.street %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.contact %></td>
          <td><%= link_to link_to link_to content_tag(:span, nil, :class => "glyphicon glyphicon-eye-open"), address %></td>
          <td><%= link_to link_to link_to content_tag(:span, nil, :class => "glyphicon glyphicon-edit"), edit_address_path(address) %></td>
          <td><%= link_to link_to link_to content_tag(:span, nil, :class => "glyphicon glyphicon-trash"), address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Address', new_address_path, :class => "btn btn-primary" %>

</div>